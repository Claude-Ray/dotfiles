{
  "title": "Change shift key",
  "rules": [
    {
      "description": "Change left_shift to ctrl+space if alone, in specific applications. [Select the previous input source]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": [
                "com\\.tencent\\.WeWorkMac"
              ],
              "type": "frontmost_application_if"
            }
          ]
        }
      ]
    }
  ]
}

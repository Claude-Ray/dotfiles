{
  "title": "Emacs",
  "rules": [
    {
      "description": "Change left_shift to ctrl+\\ if alone. [toggle-input-method]",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "backslash",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "bundle_identifiers": [
                "org\\.gnu\\.Emacs"
              ],
              "type": "frontmost_application_if"
            }
          ]
        }
      ]
    }
  ]
}
